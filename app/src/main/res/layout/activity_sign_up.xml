<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tv_sign_up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="회원 가입"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_title">
        <ImageView
            android:id="@+id/iv_sign_up_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/cover"/>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/et_sign_up_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="35dp"
        android:paddingHorizontal="12dp"
        android:hint="닉네임"
        android:textColorHint="#A1A1A1"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/bg_rectangle_signup"
        android:backgroundTint="#292929"
        app:layout_constraintTop_toBottomOf="@id/cv_sign_up"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_sign_up_name_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/et_sign_up_name"
        app:layout_constraintEnd_toStartOf="@id/TextView"/>
    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="/15"
        android:textColor="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/et_sign_up_name"
        app:layout_constraintEnd_toEndOf="@id/et_sign_up_name"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sign_up2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="#292929"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_name_count"
        app:layout_constraintStart_toStartOf="parent">
        <EditText
            android:id="@+id/et_sign_up_introduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:hint="자신을 소개해보세요."
            android:textColorHint="#A1A1A1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:singleLine="false"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/et_sign_up_name"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_sign_up_introduce_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/cv_sign_up2"
        app:layout_constraintEnd_toStartOf="@id/TextView2"/>
    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="/15"
        android:textColor="@color/gray_100"
        app:layout_constraintTop_toBottomOf="@id/cv_sign_up2"
        app:layout_constraintEnd_toEndOf="@id/cv_sign_up2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입 완료"
        android:background="@drawable/bg_rectangle"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up_introduce_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>